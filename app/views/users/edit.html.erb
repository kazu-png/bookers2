<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>User info</h2>
   <%= form_with model:@user, local: true do |f| %>
    <div id="error_explanation">
      <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
       <ul>
          <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
          <% end %>
       </ul>
    </div>
    
     <div class="form-group">
      <label for="user_name">Name</label>
      <%= f.text_field :name, class:'' %>
     </div>
     
     <div class="form-group"> 
      <%= attachment_image_tag @user, :profile_image_id, :fill, 60, 60, fallback:"no_image.jpg" %>
      <label for="user_image">Image</label>
      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
     </div>
     
     <div class="form-group">
      <label for="user_introduction">Introdction</h3>
      <%= f.text_area :introduction, class:'' %>
     </div>
      <%= f.submit 'Update User' %>
   <% end %>
  </div>
 </div>
</div>
  
