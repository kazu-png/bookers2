 <h1>Editing Book</h2>
   <%= form_with model:@book, local:true do |f| %>
        <div class="field row">
          <%= f.label :title, 'Title' %>
          <%= f.text_field :title %>
        </div>
        <div class="field row">
          <%= f.label :body, 'Opinion' %>
          <%= f.text_area :body %>
        </div>
        <div class="submit row">
          <%= f.submit 'Update Book' %>
        </div>
      <% end %>
      <%= link_to 'Show', book_path(@book.id) %>
      <span>|</span>
      <%= link_to 'Back', books_path %>